# Sidebar navigation
st.sidebar.markdown('<p class="sidebar-header">ğŸ“Š Navigation</p>', unsafe_allow_html=True)
page = st.sidebar.selectbox("Choose a page:", [
    "ğŸ  Home Dashboard",
    "ğŸ“ˆ Data Analytics",
    "ğŸ”§ Interactive Tools",
    "ğŸ“‹ Data Entry Form",
    "ğŸŒ API Integration",
    "ğŸ“Š Custom Charts"
